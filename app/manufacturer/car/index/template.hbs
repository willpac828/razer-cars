<div class="container">
  {{#bulma-message class="new-car"}}
    <div class="message-header">Toyota</div>
      <div class="message-body">
        <div class="content is-text-right new-car">
          {{bulma-button icon="fa fa-plus" label="Add New Car" isDanger=true}}
        </div>
      </div>
  {{/bulma-message}}


    <div class="grid">
      <div class="grid__item">
        {{#bulma-message class="car-card"}}
          <div class="message-header"><p class="car-card__model">1998 - Toyota Osprey</p></div>
          <div class="message-body">
            <p class="spec">Mileage: 128k</p>
            <p class="spec">Seats: 5</p>
            <p class="spec">Price: $2,800</p>
          </div>
        {{/bulma-message}}
      </div>
    </div>
</div>
